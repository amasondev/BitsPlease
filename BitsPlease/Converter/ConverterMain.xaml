<bitsplease:VideoDropWindow x:Class="Converter.ConverterMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Converter"
        xmlns:bitsplease="clr-namespace:BitsPlease;assembly=BitsPlease"
        mc:Ignorable="d"
        Title="Converter" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="format" HorizontalAlignment="Left" Height="23" Margin="219,141,0,0" TextWrapping="Wrap" Text="format" VerticalAlignment="Top" Width="120" AllowDrop="False"/>
        <Button Content="Convert" HorizontalAlignment="Left" Margin="171,233,0,0" VerticalAlignment="Top" Width="75" Click="Convert"/>
        <Label x:Name="LBL_File" Content="File: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</bitsplease:VideoDropWindow>
