<bitsplease:VideoDropWindow x:Class="Slicer.MainWindow"
        xmlns:bitsplease="clr-namespace:BitsPlease;assembly=BitsPlease"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slicer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <TextBox x:Name="start" HorizontalAlignment="Left" Height="23" Margin="62,141,0,0" TextWrapping="Wrap" Text="start" VerticalAlignment="Top" Width="120" AllowDrop="False"/>
    <TextBox x:Name="end" HorizontalAlignment="Left" Height="23" Margin="219,141,0,0" TextWrapping="Wrap" Text="duration" VerticalAlignment="Top" Width="120" AllowDrop="False"/>
    <Button Content="Slice" HorizontalAlignment="Left" Margin="171,233,0,0" VerticalAlignment="Top" Width="75" Click="Trim"/>
    <Label x:Name="LBL_File" Content="File: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</bitsplease:VideoDropWindow>

   