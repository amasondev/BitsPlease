<bitsplease:VideoDropWindow x:Class="Slicer.SlicerMain"
        xmlns:bitsplease="clr-namespace:BitsPlease;assembly=BitsPlease"
        xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slicer"
        mc:Ignorable="d"
        Title="Slicer" Height="523.548" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="311*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="146*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Menu x:Name="MENU" VerticalAlignment="Top" Height="20">
            <MenuItem Header="File">
                <MenuItem Header="Open..." Click="FileOpen_Click"/>
                <MenuItem Header="Exit" Click="FileExit_Click"/>
            </MenuItem>
        </Menu>

        <TextBox x:Name="start" HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" Text="start" Width="120" AllowDrop="False" Grid.Row="2" Height="23" VerticalAlignment="Bottom"/>
        <TextBox x:Name="end" HorizontalAlignment="Left" Margin="135,0,0,10" TextWrapping="Wrap" Text="duration" Width="120" AllowDrop="False" Grid.Row="2" Height="23" VerticalAlignment="Bottom"/>
        <Button Content="Slice" Margin="0,0,10,10" Click="Trim" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom" Grid.Row="2"/>
        <ffme:MediaElement x:Name="VideoPreview" Margin="10,30,10,1" Background="Gray" UnloadedBehavior="Manual" MessageLogged="OnMessageLogged" LoadedBehavior="Manual" MediaOpened="VideoPreview_MediaOpened"/>
        <Grid Margin="0,10" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BTN_Play" Content="Play" Height="20" Width="50" Click="BTN_Play_Click"/>
            <Button x:Name="BTN_Pause" Content="Pause" Grid.Column="1" Height="20" Width="50" Click="BTN_Pause_Click"/>
        </Grid>
        <Slider Margin="10,10,10,0" Grid.Row="2" VerticalAlignment="Top"/>
    </Grid>
</bitsplease:VideoDropWindow>

   